# Somnia Network
RPC_URL=https://dream-rpc.somnia.network
WEBSOCKET_URL=wss://dream-rpc.somnia.network/ws
NEXT_PUBLIC_WEBSOCKET_URL=wss://dream-rpc.somnia.network/ws

# Backend Wallet (funded Somnia Testnet account)
PRIVATE_KEY=0xYOUR_PRIVATE_KEY
PUBLISHER_ADDRESS=0xYOUR_WALLET_ADDRESS

# Optional: address used for alert ownership (defaults to PUBLISHER_ADDRESS)
ALERT_DEFAULT_USER=0xYOUR_WALLET_ADDRESS

# WalletConnect (get project ID at https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=

# Telegram Bot (create via @BotFather)
# 1. Message @BotFather on Telegram
# 2. Send /newbot and follow prompts
# 3. Copy the token here
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_WEBHOOK_SECRET=random_secret_string
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME=YourBotUsername

# Workers API (for syncing Telegram links - VPS deployment)
# Leave empty for Vercel deployment (uses in-memory only)
# IMPORTANT: This secret must match WORKERS_API_SECRET in workers/.env
WORKERS_API_URL=http://localhost:3001
WORKERS_API_SECRET=shared_secret

