# Somnia Network
RPC_URL=https://dream-rpc.somnia.network
WEBSOCKET_URL=wss://dream-rpc.somnia.network/ws

# Publisher Wallet (funded Somnia testnet account)
PRIVATE_KEY=0xYOUR_PRIVATE_KEY
PUBLISHER_ADDRESS=0xYOUR_WALLET_ADDRESS

# ============ Price Feeds ============

# CoinGecko API Keys (Demo tier - free)
# Get keys at: https://www.coingecko.com/en/developers/dashboard
# Up to 3 keys for fallback (if one hits rate limit, uses next)
COINGECKO_API_KEY_1=CG-your-first-api-key
COINGECKO_API_KEY_2=CG-your-second-api-key
COINGECKO_API_KEY_3=CG-your-third-api-key

# DIA Oracle (on-chain price feeds on Somnia)
ENABLE_DIA=true

# Price symbols to track
SYMBOLS=BTC,ETH,USDC,USDT,SOMI,ARB,SOL

# Price publish interval (ms)
PUBLISH_INTERVAL_MS=30000

# Enable/disable price publisher
ENABLE_PRICES=true

# ============ Sentiment Streams ============

# Enable/disable sentiment publisher
ENABLE_SENTIMENT=true

# Symbols for sentiment tracking
SENTIMENT_SYMBOLS=BTC,ETH,SOL

# CryptoPanic API Key (for news sentiment)
# Get key at: https://cryptopanic.com/developers/api/
# Developer tier: 100 requests/month (free)
# Leave empty to disable news features
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key

# Sentiment fetch intervals (in minutes)
# Adjust based on your API tier limits
FEAR_GREED_INTERVAL_MIN=60          # Fear & Greed check interval (default: 60 min, updates daily)
SENTIMENT_INTERVAL_MIN=120          # CoinGecko sentiment interval (default: 120 min)
NEWS_POLL_INTERVAL_MIN=30           # CryptoPanic news poll (default: 30 min, ~100 req/month)
NEWS_AGG_INTERVAL_MIN=60            # News aggregate interval (default: 60 min)

# ============ Telegram Bot ============

TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# ============ Workers API ============

WORKERS_API_PORT=3001
WORKERS_API_SECRET=your_shared_secret

# ============ Database ============

DATABASE_PATH=./data/alerts.db
